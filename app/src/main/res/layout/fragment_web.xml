<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.web.WebFragment">

        <WebView
            android:id="@+id/article_web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/article_web_view"
            app:layout_constraintEnd_toEndOf="@+id/article_web_view"
            app:layout_constraintStart_toStartOf="@+id/article_web_view"
            app:layout_constraintTop_toTopOf="@+id/article_web_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>